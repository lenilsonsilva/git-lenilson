package br.com.easytaxi.components;

import br.com.easytaxi.control.BaseTest;

public class RegisterComponent extends BaseTest {

	public void clickCreateAccount() {
		driver.findElementById("br.com.easytaxi.homolog:id/container_create_account").click();
	}

	public void setName(String name) {
		driver.findElementById("br.com.easytaxi.homolog:id/user").setValue(name);
	}

	public void setPhone(String phone) {
		driver.findElementById("br.com.easytaxi.homolog:id/phone").setValue(phone);
	}

	public void setEmail(String email) {
		driver.findElementById("br.com.easytaxi.homolog:id/email").setValue(email);
	}

	public void setPassword(String password) {
		driver.findElementById("br.com.easytaxi.homolog:id/password").setValue(password);
	}

	public void clickRegister() {
		driver.findElementById("br.com.easytaxi.homolog:id/btComplete").click();
	}

}
