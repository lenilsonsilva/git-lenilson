package br.com.easytaxi.components;

import org.openqa.selenium.By;
import org.openqa.selenium.html5.Location;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;

import br.com.easytaxi.control.BaseTest;
import sun.awt.im.InputMethodManager;

public class ProfileComponent extends BaseTest {
	WebDriverWait wait;

	public void waitHome() {
		wait = new WebDriverWait(driver, 60);
		wait.until(ExpectedConditions.presenceOfElementLocated(By.id("br.com.easytaxi.homolog:id/img_logo")));
		Location gps = new Location(-23.541008, -46.733843, 726);
		driver.setLocation(gps);

	}

	public void waitPopUp() throws Exception {
		wait.until(ExpectedConditions.presenceOfElementLocated(By.id("android:id/button1"))).click();

	}

	public void clickProfileName(String name) {
		driver.findElementsById("br.com.easytaxi.homolog:id/title").get(0).click();
		driver.findElementsByClassName("android.widget.EditText").get(0).clear();
		driver.findElementById("br.com.easytaxi.homolog:id/user_name_input").setValue(name);
	}

	public void clickProfilePhone(String phone) {
		driver.findElementsById("br.com.easytaxi.homolog:id/title").get(0).click();
		driver.findElementsByClassName("android.widget.EditText").get(1).clear();
		driver.findElementById("br.com.easytaxi.homolog:id/user_phone_input").setValue(phone);

	}

	public void clickProfilePassword(String password) {
		driver.findElementsById("br.com.easytaxi.homolog:id/title").get(0).click();
		driver.findElementsByClassName("android.widget.EditText").get(2).clear();
		driver.findElementById("br.com.easytaxi.homolog:id/user_password_input").setValue(password);

	}

	public void clickButtonSave() {
		driver.findElementById("br.com.easytaxi.homolog:id/save_changes_button").click();
	}

}
