package br.com.easytaxi.components;

import org.openqa.selenium.support.ui.WebDriverWait;

import br.com.easytaxi.control.BaseTest;
import io.appium.java_client.TouchAction;
import io.appium.java_client.android.AndroidElement;

public class RegisterCardComponent extends BaseTest {

	WebDriverWait wait;

	public void clickMyCards() {
		driver.findElementsById("br.com.easytaxi.homolog:id/design_menu_item_text").get(2).click();
	}

	public void clickButtonAddCard() {
		driver.findElementById("br.com.easytaxi.homolog:id/bt_add_credit_card").click();

	}

	public void setNameCard(String namecard) {
		driver.findElementById("br.com.easytaxi.homolog:id/name").setValue(namecard);
	}

	public void setCardNumber(String cardnumber) {
		driver.findElementById("br.com.easytaxi.homolog:id/cardNumber").setValue(cardnumber);
	}

	public void setExpireCard(String expirecard) {
		driver.findElementById("br.com.easytaxi.homolog:id/expireCard").setValue(expirecard);
	}

	public void setCvv(String cvv) {
		driver.findElementById("br.com.easytaxi.homolog:id/cvv").setValue(cvv);
	}

	public void clickAddCard() {
		driver.findElementById("br.com.easytaxi.homolog:id/btn_add").click();
	}

	public void invalidLogin() {
		driver.findElementsById("br.com.easytaxi.homolog:id/btSend");

	}

	public void verificCardREgister() {
		driver.findElementById("br.com.easytaxi.homolog:id/img_credit_card");
		driver.findElementById("br.com.easytaxi.homolog:id/name");
		driver.findElementById("br.com.easytaxi.homolog:id/number");

	}
	
	public void clickButtonFavorite(){
		driver.findElementsById("br.com.easytaxi.homolog:id/bt_favorite").get(1).click();
	}

	public void pressDelete() {
		AndroidElement card = driver.findElementById("br.com.easytaxi.homolog:id/number");
		TouchAction tca = new TouchAction(driver);
		tca.longPress(card);
		tca.release().perform();
		driver.findElementById("android:id/button1").click();

	}

	public void checkScreenNewCard() {
		driver.findElementById("br.com.easytaxi.homolog:id/btn_add");
	}

	public void checkScreenMycard() {
		driver.findElementById("br.com.easytaxi.homolog:id/bt_add_credit_card");
	}

	public int checkCardQnt() {
		int qnt = driver.findElementsById("br.com.easytaxi.homolog:id/img_credit_card").size();
		return qnt;
		
	}

}
